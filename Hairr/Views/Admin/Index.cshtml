@model IEnumerable<Appointment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Test.cshtml";
}

<h2>Bekleyen Randevular</h2>

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-success">@TempData["Mesaj"]</div>
}

@if (TempData["Hata"] != null)
{
    <div class="alert alert-danger">@TempData["Hata"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Müşteri Adı</th>
            <th>Tarih</th>
            <th>Personel</th>
            <th>Durum</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.ID</td>
                <td>@randevu.CustomerName</td>
                <td>@randevu.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@randevu.PersonelId</td>
                <td>@randevu.Status</td>
                <td>
                    <a asp-action="Onayla" asp-route-id="@randevu.ID" class="btn btn-primary btn-sm">Detay/Onayla</a>
                </td>
            </tr>
        }
    </tbody>
</table>